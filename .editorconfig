# EditorConfig is awesome: https://editorconfig.org

root = true

# ========================
# Global
# ========================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ========================
# Python
# ========================
[*.py]
indent_size = 4
max_line_length = 88

# ========================
# JSON / YAML
# ========================
[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

# ========================
# Markdown
# ========================
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# ========================
# Shell scripts (Linux / WSL)
# ========================
[*.sh]
end_of_line = lf
indent_size = 2

# ========================
# Docker
# ========================
[Dockerfile]
indent_size = 2
